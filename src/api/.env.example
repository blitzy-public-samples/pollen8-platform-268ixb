DB_HOST=localhost
DB_PORT=5432
DB_NAME=pollen8_db
DB_USER=pollen8_user
DB_PASSWORD=your_secure_password_here

# API Configuration
API_PORT=3000
API_BASE_URL=http://localhost:3000/api

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1h

# Twilio Configuration (for phone verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid_here

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
ENABLE_RATE_LIMITING=true

# Note: Replace all placeholder values with actual values appropriate for your development environment.
# Never commit the actual .env file with sensitive information to version control.
# Use a secure method to manage and distribute production environment variables.